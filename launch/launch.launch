<launch>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find your_package_name)/rviz/gmapping_config.rviz"/>

  <node name="odom_to_tf" pkg="second_project" type="odom_to_tf" output="screen">
    <param name="root_frame" value="map"/>
    <param name="child_frame" value="/wheel_odom"/>
    <remap from="ugv/odom" to="tf"/>
  </node>

  <node name="pointcloud_to_laserscan" pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" output="screen">
    <param name="range_min" value="0.1"/>
    <param name="range_max" value="10.0"/>
    <param name="scan_time" value="0.1"/>
    <param name="min_height" value="0.0"/>
    <param name="max_height" value="1.0"/>
    <param name="input_topic" value="/ugv/rslidar_points"/>
    <param name="output_topic" value="/scan"/>
  </node>

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="map"/>
    <param name="odom_frame" value="wheel_odom"/>
    <param name="map_frame" value="map"/>
    <param name="scan_topic" value="/scan"/>
    <param name="odom_topic" value="/ugv/odom"/>
  </node>

</launch>
